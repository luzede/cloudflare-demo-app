{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"files": {
		"include": [
			"./**/*.tsx",
			"./**/*.ts",
			"./**/*.js",
			"./**/*.jsx",
			"./**/*.json",
			"./**/*.jsonc"
		]
	}
}
